	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gerold-penz/bun-imap-rest-api.git"
	},
	"devDependencies": {
		"@picocss/pico": "^2.0.6",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^4.0.0-next.6",
		"@types/bun": "latest",
		"@types/node-imap": "^0.9.3",
		"http-status-codes": "^2.3.0",
		"mailparser": "^3.7.1",
		"node-imap": "^0.9.6",
		"sass": "^1.79.3",
		"svelte": "^5.0.0-next.1",
		"svelte-adapter-bun": "^0.5.2",
		"svelte-check": "^4.0.0",
		"typescript": "^5.0.0",
		"vite": "^5.0.3",
		"zod": "^3.23.8",
		"zod-form-data": "^2.0.2"
	},
	"bugs": {
		"url": "https://github.com/gerold-penz/bun-imap-rest-api/issues"
	},
	"description": "IMAP REST API",
	"keywords": [
		"Bun",
		"Bun.js",
		"TypeScript",
		"Imap",
		"Rest",
		"Api",
		"Server",
		"Docker"
	],
	"license": "MIT",
	"scripts": {
		"dev": "bun --bun vite dev --host=0.0.0.0 --port=8080 --strictPort",
		"increment_package_version": "npm version patch --no-git-tag-version",
		"build:vite": "bun --bun vite build",
		"build": "bun run increment_package_version && bun run build:vite",
		"preview": "bun --bun vite preview --host=0.0.0.0 --port=8080 --strictPort",
		"build:docker": "docker buildx build --platform linux/amd64,linux/arm64 -t ghcr.io/gerold-penz/bun-imap-rest-api:latest --push .",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
	},
	"type": "module"
}
